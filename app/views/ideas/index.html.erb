<div class="container">
  <div class="row pad-top">
    <div class="jumbotron">
      <p>Welcome to,</p><h1 class="display-3">ideaMe!</h1> <p>The best way to share new ideas!</p>
      <hr>
      <p></p>
      <p class="lead">
        <% if current_user %>
          <%= button_to "Submit Idea!", new_idea_path, :method => "get", class: "btn btn-lg btn-success" %>
        <% else %>
          <%= button_to "Sign Up!", new_user_path, :method => "get", class: "btn btn-lg btn-primary" %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-centered col-md-6 col-sm-6 col-xs-10">
      <h1>Idea Index Page</h1>
      <hr>
      <!-- begin idea panel -->
      <% @ideas.each do |idea| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <h4><%= link_to idea.idea, idea %></h4>
            <p>
              Submitted <%= time_ago_in_words(idea.created_at) %>
              by <%= idea.user.first_name %>
            </p>
            <% if current_user %>
              <%= link_to like_idea_path(idea), method: :put, class: "glyphicon glyphicon-thumbs-up" do %>
                Upvote
                <%= idea.get_upvotes.size %>
              <% end %>

              <%= link_to dislike_idea_path(idea), method: :put, class: "glyphicon glyphicon-thumbs-down" do %>
                Downvote
                <%= idea.get_downvotes.size %>
              <% end %>
            <% else %>
              <p><%= link_to "Login", login_path %> to vote on an idea!</p>
            <% end %>
        </div>
      </div>
      <% end %>
      <!-- end idea panel -->
    </div>
  </div>
</div>
